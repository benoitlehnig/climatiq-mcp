{
    "compilerOptions": {
      // Target ES2022 for modern Node.js support
      "target": "ES2022",
      
      // Use ESNext modules for modern import/export
      "module": "ESNext",
      
      // Include ES2022 library features
      "lib": ["ES2022"],
      
      // Use Node.js module resolution
      "moduleResolution": "Node",
      
      // Allow default imports from modules without default exports
      "allowSyntheticDefaultImports": true,
      
      // Enable interoperability between CommonJS and ES modules
      "esModuleInterop": true,
      
      // Enable all strict type checking options
      "strict": true,
      
      // Skip type checking of declaration files for faster compilation
      "skipLibCheck": true,
      
      // Ensure consistent casing in file names
      "forceConsistentCasingInFileNames": true,
      
      // Output directory for compiled JavaScript
      "outDir": "./dist",
      
      // Root directory for TypeScript source files
      "rootDir": "./src",
      
      // Generate .d.ts declaration files
      "declaration": true,
      
      // Generate source maps for declaration files
      "declarationMap": true,
      
      // Generate source maps for debugging
      "sourceMap": true,
      
      // Allow importing JSON files
      "resolveJsonModule": true,
      
      // Additional helpful options
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true
    },
    
    // Include all TypeScript files in src directory
    "include": [
      "src/**/*"
    ],
    
    // Exclude these directories from compilation
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }